<Window x:Class="WPFDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid>
      <DockPanel>
        <ToolBar DockPanel.Dock="Top" Height="25">
          <!-- The ApplicationCommands.Cut command is a routed command that exists in the framework -->
          <Button Name="btnCut" Command="ApplicationCommands.Cut">Cut</Button>
        </ToolBar>
        <StackPanel Orientation="Vertical">
          <TextBox Name="txt1"></TextBox>
          <TextBox Name="txt2"></TextBox>
        </StackPanel>
      </DockPanel>
    </Grid>
</Window>
